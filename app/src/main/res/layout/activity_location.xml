<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.maps.MapView
            android:id="@+id/location_map_view"
            android:layout_width="match_parent"
            android:layout_height="278dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scroll_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="350dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/walk"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="24dp" />

                        <ProgressBar
                            android:id="@+id/walk_spinner"
                            style="Spinner"
                            android:layout_marginLeft="72dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                        </ProgressBar>

                        <TextView
                            android:id="@+id/walk_time"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/black"
                            android:text="12 min"
                            android:textSize="45sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/bike"
                            android:layout_margin="16dp" />

                        <ProgressBar
                            android:id="@+id/bike_spinner"
                            style="Spinner"
                            android:layout_marginLeft="72dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                        </ProgressBar>

                        <TextView
                            android:id="@+id/bike_time"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_margin="16dp"
                            android:textColor="@color/black"
                            android:text="5 min"
                            android:textSize="45sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/drive"
                            android:layout_margin="16dp" />

                        <ProgressBar
                            android:id="@+id/drive_spinner"
                            style="Spinner"
                            android:layout_marginLeft="72dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                        </ProgressBar>

                        <TextView
                            android:id="@+id/drive_time"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_margin="16dp"
                            android:textColor="@color/black"
                            android:text="7 min"
                            android:textSize="45sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/drive"
                            android:layout_margin="16dp" />

                        <ProgressBar
                            android:id="@+id/bus_spinner"
                            style="Spinner"
                            android:layout_marginLeft="72dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                        </ProgressBar>

                        <TextView
                            android:id="@+id/bus_time"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_margin="16dp"
                            android:textColor="@color/black"
                            android:text="20 min"
                            android:textSize="45sp"/>

                    </LinearLayout>


                </LinearLayout>


                <RelativeLayout
                    android:layout_marginTop="278dp"
                    android:id="@+id/location_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:background="@color/primary">

                    <TextView
                        android:id="@+id/location_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"/>

                    <TextView
                        android:id="@+id/location_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:text="Location Name"
                        android:layout_above="@id/location_distance"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="8dp"/>

                </RelativeLayout>

                <com.software.shell.fab.ActionButton
                    android:id="@+id/action_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="318dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/fab_margin"
                    />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/location_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/translucent"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true"
        app:theme="@style/Toolbar.Transparent">
    </android.support.v7.widget.Toolbar>


</RelativeLayout>